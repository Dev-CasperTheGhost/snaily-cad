<%- include("../partials/main/header.ejs") %>


<div class="container">
    <h1 class="card-title"><%= ticket[0].title %> 
        <% if (isAdmin === '4d9OOeGOCV6eGOCV4d96') { %>
            <div class="float-right">
                <a class="btn btn-danger" href="/admin/ticket/close/<%= ticket[0].id %>">Close Ticket</a>
            </div>
        <% } else { %>

        <%}%>
        </h1>
    <span class="text-secondary"><span class="bolder">Created:</span>     <%= ticket[0].date %> <span class="bolder">Status:</span>   <%= ticket[0].status %> </span>
    <h2 class="card-title mt-5">Messages</h2>
    <ul class="list-group">
        <form action="/support/ticket/<%= ticket[0].ticket_id %>-<%= ticket[0].title %>" method="POST">
            <div class="form-group card">
              <label for="exampleInputEmail1" class="card-header">Reply</label>
              <div class="card-body">
                
                  <textarea name="message" required id="ticket" cols="30" rows="6" class="form-control" placeholder="Reply Message.."></textarea>
              </div>
              <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Reply</button>
              </div>
            </div>
        </form>
        <% messages.forEach(message => { %>
            <li class="list-group-item">
                <span class="bolder"><%= message.name %> </span>
                <br>
                <br>
                <p class="text-dark">
                    <%= message.message %>
                </p>
            </li>
        <% }) %>
        <li class="list-group-item">
            <span class="bolder"><%= ticket[0].creator %></span>
            <br>
            <br>

            <p class="text-dark">
                <%= ticket[0].description %>
            </p>
        </li>
    </ul>

</div>

<div class="mb-5"></div>