<%- include("../partials/header.ejs") %>

<div class="container">
    <% if (plates) { %>
    <h1 class="card-title uppercase text-center mt-3"> <%= plates.plate %></h1>
    <div class="users-list">
        <ul class="list-group">
            <li class="list-group-item name"> <span class="bolder">Vehicle Owner:</span>
                <a
                    href="/officers/dash/search/name/<%= name.id %>-<%= name.first_name %>-<%= name.last_name %> "><%= plates.owner %></a>
            </li>
            <li class="list-group-item"> <span class="bolder"> Vehicle:</span> <%= plates.vehicle %></li>
            <li class="list-group-item"> <span class="bolder">Vehicle Color:</span> <span
                    id="color"><%= plates.color %></span></li>
            <li class="list-group-item"> <span class="bolder">Insurance Status:</span> <span
                    id="status"><%= plates.in_status %></span> </li>
        </ul>
    </div>

    <% } else { %>
    <p class="text-center">Plate Not Found. Go Back <a href="/officers/dash/search/plate">Here</a>.</p>

    <% } %>

</div>


