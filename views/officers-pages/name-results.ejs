<%- include("../partials/header.ejs") %>



<div class="container ">
    <h1 class="card-title cap mt-3 text-center"> <%= result.first_name %> <%= result.last_name %></h1>

    <ul class="list-group">
        <a href="/officers/dash/search/person-name" class="btn btn-primary cap mt-2">Back to name search</a>
        <li class="list-group-item mt-2">Full Name: <%= result.full_name %> </li>
        <li class="list-group-item mt-2">Gender: <%= result.gender %></li>
        <li class="list-group-item mt-2">Birthday: <%= result.birth %> </li>
        <li class="list-group-item mt-2">Ethnicity: <%= result.ethnicity %> </li>
        <li class="list-group-item mt-2">Hair Color: <%= result.hair %> </li>
        <li class="list-group-item mt-2">Eye Color: <%= result.eyes %> </li>
        <li class="list-group-item mt-2">Address: <%= result.address %> </li>
        <li class="list-group-item mt-2">Height: <%= result.height %> </li>
        <li class="list-group-item mt-2">Weight: <%= result.weight %> </li>

        <div class="list-group-item list-group-item-action active mt-2">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 ">Licences:</h5>
            </div>
            <div id="dots3"></div>
            <div id="more3">
                <p class="mb-1">
                    <li class="list-group-item color-black list-inline">Driver Licence: <%= result.dmv %> <form
                            action="<%= result.id %>-<%= result.first_name %>-<%= result.last_name %>/suspend"
                            class="list-inline-item float-right" method="post"><button type="submit"
                                class="btn btn-danger">Suspend
                                License</button>
                        </form>
                    </li>
                    <li class="list-group-item color-black">Pilot Licence: <%= result.pilot_licence %> </li>
                    <li class="list-group-item color-black">Firearms Licence: <%= result.fire_licence %> </li>
                </p>

            </div>
            <button class="btn btn-primary" onclick="lic()" id="licBtn">See all</button>



        </div>
        <div class="list-group-item list-group-item-action active mt-2">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Vehicles:</h5>
            </div>
            <div id="dots"></div>
            <div id="more">
                <p class="mb-1">
                    <% vehicles.forEach(vehicle => { %>
                    <li class="list-group-item color-black"> <%= vehicle.vehicle %>
                        <p>Plate: <%= vehicle.plate %> <br> Insurance Status: <%= vehicle.in_status %> </p>
                    </li>

                    <%  }) %>
                </p>
            </div>
            <button class="btn btn-primary" onclick="veh()" id="vehBtn">See all</button>


        </div>
        <div class="list-group-item list-group-item-action active mt-2">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Weapons:</h5>
            </div>
            <div id="dots2"></div>
            <div id="more2">
                <% if (!weapons[0]) { %>
                <li class="list-group-item color-black">
                    <p>No Weapons registered to this person.</p>
                </li>
                <% } else  {%>
                <p class="mb-1">
                    <% weapons.forEach(weapon => { %>
                    <li class="list-group-item color-black"> <%= weapon.weapon %>
                        <p> weapon Status: <%= weapon.status %> </p>
                    </li>

                    <%  }) %>
                </p>

                <% } %>
            </div>
            <div class="btn btn-primary" onclick="wep()" id="weapenBtn">See all</button>
            </div>


        </div>



        <!-- Charges -->
        <div class="list-group-item list-group-item-action active mt-2">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Legal:</h5>
            </div>
            <div id="dots4"></div>
            <div id="more4">
                <% if (!charges[0]) { %>
                <li class="list-group-item color-black">
                    <p>Clean record.</p>
                </li>
                <a class="btn btn-dark text-light"
                    href="/officers/dash/offence/add/<%= result.id %>-<%= result.first_name %>-<%= result.last_name %>">Add
                    Offence</a>
                <% } else  {%>
                <p class="mb-1">
                    <% charges.forEach(charge => { %>
                    <li class="list-group-item color-black"> <%= charge.charge %>
                        <p> Notes: <%= charge.notes %> <br> Given on: <%= charge.date %></p>

                    </li>

                    <%  }) %>
                </p>

                <a class="btn btn-dark text-light"
                    href="/officers/dash/offence/add/<%= result.id %>-<%= result.first_name %>-<%= result.last_name %>">Add
                    Offence</a>
                <% } %>
            </div>
            <div class="btn btn-primary" onclick="legal()" id="legalBtn">See all</button>


            </div>
    </ul>
    <div class="list-group-item list-group-item-action active mt-2">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">Warrants:</h5>
        </div>
        <div id="dots5"></div>
        <div id="more5">
            <% if (!warrants[0]) { %>
            <li class="list-group-item color-black">
                <p>No warrants out for this person.</p>
            </li>
            <a href="/officers/dash/warrants/add/<%= result.id %>-<%= result.first_name %>-<%= result.last_name %>"
                class="btn btn-dark text-light">Add Warrant</a>

            <% } else  {%>
            <p class="mb-1">
                <% warrants.forEach(war => { %>
                <li class="list-group-item color-black">
                    <p><span class="bolder"> Warrant:</span> <%= war.reason %></p>
                    <p><span class="bolder">Date From, To: <%= war.d_from %>-<%= war.d_to %></span></p>
                </li>
                <%  }) %>
            </p>
            <a href="/officers/dash/warrants/add/<%= result.id %>-<%= result.first_name %>-<%= result.last_name %>"
                class="btn btn-dark text-light">Add Warrant</a>
            <% } %>
        </div>
        <div class="btn btn-primary" onclick="war()" id="warB">See all</button>

        </div>



    </div>
    <div class="mb-5"></div>
</div>




<script>
    function veh() {
        let dots = document.getElementById("dots");
        let moreText = document.getElementById("more");
        let vehBtn = document.getElementById("vehBtn")
        let weapenBtn = document.getElementById("weapenBtn")

        if (dots.style.display === "none") {
            dots.style.display = "inline";
            moreText.style.display = "none";
            vehBtn.textContent = "See All"

        } else {
            dots.style.display = "none";
            moreText.style.display = "inline";
            vehBtn.textContent = "See Less"
        }
    }
    function wep() {
        let dots = document.getElementById("dots2");
