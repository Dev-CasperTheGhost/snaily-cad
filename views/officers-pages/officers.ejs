<%- include("../partials/header.ejs") %>

<div class="container">
  <h1 class="card-title mt-3 text-light">
    Police Department - AOP: <%= cad.AOP %>
  </h1>

  <ul class="list-group">
    <a href="/officers/dash" class="btn btn-primary">Police Dashboard</a>
    <a href="/officers/add" class="btn btn-primary mt-1">Add Officer</a>

    <% if (officers.length) { %> <% officers.forEach((officer, index) => { %>
    <li class="list-group-item mt-2 text-light bg-dark">
      <form
        class="text-light bg-dark"
        action="/officers/update-status/<%= officer.id %>"
        method="post"
      >
        <%= ++index %> | <%= officer.officer_dept %> | <%= officer.officer_name %> | <%= officer.officer_rank %>

        <div class="float-right">
          <label class="my-1 mr-2" for="inlineFormCustomSelectPref">
            &thinsp; Status:</label
          >
          <select
            id="status2"
            class="custom-select my-1 mr-sm-2 text-light bg-dark"
            name="status2"
            id="inlineFormCustomSelectPref"
          >
            <option
              class="text-light bg-dark"
              selected
              value="<%= officer.status2 %>"
              ><%= officer.status2 %>
            </option>
            <option class="text-light bg-dark" value="">New Status..</option>
            <option class="text-light bg-dark" value="10-42 | 10-7">10-42 | 10-7</option>
            <option class="text-light bg-dark" value="10-6">10-6</option>
            <option class="text-light bg-dark" value="10-5">10-5</option>
            <option class="text-light bg-dark" value="10-12">10-12</option>
            <option class="text-light bg-dark" value="10-97">10-97</option>
            <option class="text-light bg-dark" value="10-11">10-11</option>
            <option class="text-light bg-dark" value="Signal 11"
              >Signal 11</option
            >
            <option class="text-light bg-dark" value="Code 5">Code 5</option>
          </select>
          <a href="/officers/delete/<%= officer.id %>" class="btn btn-danger">Delete Current Officer</a>
          <button type="submit" class="btn btn-success">Change Status</button>
        </div>
      </form>
      <p>
        <span class="bolder"> Current Status:</span> <%= officer.status %>
        <span class="bolder">-</span> <%= officer.status2 %>
      </p>
    </li>
    <% }) %> <% } else { %>
    <li class="list-group-item bg-dark text-light">
      You don't have any officers. Create one <a href="/officers/add">here</a>
    </li>
    <% } %>
  </ul>
</div>
