<%- include("../partials/header.ejs") %>

<form action="" class="container mx-auto" method="POST">
    <h1 class="card-title cap">Edit <%= user[0].username %> </h1>
    <div class="form-group">
        <label for="exampleInputEmail333">CAD Permisions</label>
        <input type="text" list="admin" class="form-control" name="admin" aria-describedby="emailHelp" required>
        <datalist id="admin">
            <option value="moderator">Moderator</option>
            <option value="admin">Admin</option>
        </datalist>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail333">LEO Access</label>
        <input type="text" list="leo" class="form-control" name="leo" aria-describedby="emailHelp" required>
        <datalist id="leo">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </datalist>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail333">EMS/FD Access</label>
        <input type="text" list="ems" class="form-control" name="ems" aria-describedby="emailHelp" required>
        <datalist id="ems">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </datalist>
    </div>

    <!-- <a href="/ems-fd/apply" class="btn btn-success">Apply for PD</a> -->
    <button type="submit" class="btn btn-primary">Update</button>

</form>