<%- include("../partials/main/header.ejs") %>

<form
  class="edit-veh-form"
  action=""
  method="post"
  enctype="application/x-www-form-urlencoded"
>
  <% if(message != ''){ %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>
  <h1 class="card-title">Registration</h1>
  <div class="form-group">
    <label for="exampleInputEmail1">Enter Email</label>
    <input name="email" type="email" class="form-control" placeholder="Email" />
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Enter Username</label>
    <input
      name="username"
      type="text"
      class="form-control"
      placeholder="username"
      minlength="1"
      maxlength="255"
    />
  </div>

</div>
  <div class="form-group">
    <label for="exampleInputEmail1">Enter Password</label>
    <div class="input-group mb-2">
      <input
        name="password"
        type="password"
        class="form-control"
        placeholder="Password"
        id="password"
        placeholder="Password, Minimum 6 characters long"
        minlength="6"
        maxlength="255"
      />
      <div class="input-group-prepend">
        <button
          type="button"
          class="input-group-text btn btn-primary"
          onclick="showPassword()"
        >
          Show Password
        </button>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="password2">Confirm Password</label>
    <div class="input-group mb-2">
      <input
        name="password2"
        type="password"
        class="form-control"
        placeholder="Password"
        id="password2"
        placeholder="Password, Minimum 6 characters long"
        minlength="6"
        maxlength="255"
      />
      <div class="input-group-prepend">
        <button
          type="button"
          class="input-group-text btn btn-primary"
          onclick="showPassword2()"
        >
          Show Password
        </button>
      </div>
    </div>
  </div>
  </div>
  <button type="submit" class="btn btn-primary float-right">Register</button>
  <a href="/" class="btn btn-danger cancel-btn float-right">Cancel</a>
</form>

<script>
  function showPassword() {
    let passwordInput = document.getElementById('password');
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
    } else {
      passwordInput.type = 'password';
    }
  }
  function showPassword2() {
    let passwordInput = document.getElementById('password2');
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
    } else {
      passwordInput.type = 'password';
    }
  }
</script>