<%- include("../partials/header.ejs") %>

<form class="edit-veh-form" action="" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Full Name</label>
        <input name="full_name" type="text" class="form-control bg-dark text-light" placeholder="Full Name" />
    </div>
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Birthday</label>
        <input name="birth" type="text" class="form-control bg-dark text-light" placeholder="Birthday" required />
    </div>
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Ethnicity</label>
        <select name="ethnicity" class="form-control bg-dark text-light">
            <% ethnicities.forEach(ethnicity => { %>
            <option value="<%= ethnicity.ethnicity %>"><%= ethnicity.ethnicity %></option>
            <% }) %>
        </select>
    </div>

    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Gender</label>
        <select name="gender" class="form-control bg-dark text-light">
            <% genders.forEach(gender => { %>
            <option value="<%= gender.gender %>"><%= gender.gender %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Hair Color</label>
        <input name="hair" type="text" class="form-control bg-dark text-light" placeholder="Hair Color" required />
    </div>
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Eye Color</label>
        <input name="eyes" type="text" class="form-control bg-dark text-light" placeholder="Eye Color" required />
    </div>
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Address</label>
        <input name="address" type="text" class="form-control bg-dark text-light" placeholder="Address" required />
    </div>

    <div class="form-group text-light">
        <label for="exampleInputEmail1">Enter Height</label>
        <input name="height" type="text" class="form-control bg-dark text-light"
            placeholder="Height, please use 'feet' and 'inches' or you'll get an error " />
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Enter Weight</label>
        <input name="weight" type="text" class="form-control bg-dark text-light" placeholder="Weight" />
    </div>

    <!-- Licences -->
    <div class="form-group text-light">
        <label for="exampleInputEmail1">Drivers Licence</label>
        <select name="dmv" class="form-control bg-dark text-light">
            <% dmvs.forEach(dmv => { %>
            <option value="<%= dmv.status %>"><%= dmv.status %></option>
            <% }) %>
            <option value="none">None</option>
        </select>
    </div>

    <div class="form-group text-light">
        <label for="exampleInputEmail1">Firearms Licence</label>
        <select name="fire" class="form-control bg-dark text-light">
            <% dmvs.forEach(dmv => { %>
            <option value="<%= dmv.status %>"><%= dmv.status %></option>
            <% }) %>
            <option value="none">None</option>
        </select>
    </div>

    <div class="form-group text-light">
        <label for="exampleInputEmail1">Pilots Licence</label>

        <select name="pilot" class="form-control  bg-dark text-light">
            <% dmvs.forEach(dmv => { %>
            <option value="<%= dmv.status %>"><%= dmv.status %></option>
            <% }) %>
            <option value="none">None</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary float-right margin-right-10">Add Citizen</button>
    <a href="/citizen" class="btn cancel-btn btn-danger float-right">Cancel</a>
</form>