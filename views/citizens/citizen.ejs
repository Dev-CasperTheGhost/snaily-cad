<%- include("../partials/header.ejs") %>

<h1 class="card-title cap">Welcome back <%= username %> </h1>
<div class="users-list">
    <% if(message != ''){ %>
    <div class="alert alert-danger alert-dismissible fade show margin-right-10 margin-left-10" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>


    <ul class="list-group" id="myUL">
        <!-- <a class="btn btn-primary" href="/citizen/add">Add A Citizen</a> -->
        <a class="btn btn-danger top-1" href="/logout">Logout</a>
        <a class="btn btn-primary top-1" href="/cars/register">register a car</a>
        <a class="btn btn-primary top-1" href="/weapons/register">register a weapon</a>
        <%# citizen.forEach(value => { %>
        <li class="list-group-item">

            <%= citizen.id %> | <%= citizen.first_name %> | <%= citizen.birth %>
            <a href="/citizens/<%= citizen.id %>-<%= citizen.first_name %>-<%= citizen.last_name %>"
                class="btn btn-success float-right">More Info</a>
        </li>

        <%# }) %>
    </ul>
</div>