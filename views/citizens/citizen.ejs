<%- include("../partials/header.ejs") %>

<div class="container mt-3">
    <h1 class="card-title cap text-center">Welcome back <%= username %> </h1>
    <div class="users-list">
        <% if(message != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show margin-right-10 margin-left-10" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>


        <ul class="list-group" id="myUL">
            <div class="container mx-auto row">
                <a class="btn btn-danger  " href="/logout">Logout</a>
                <a class="btn btn-primary  ml-3" href="/account/edit">Edit Account</a>
                <a href="/citizen/add" class="btn btn-primary cap  ml-3">add a new citizen</a>
                <a class="btn btn-primary cap ml-3" href="/cars/register">register a car</a>
                <a class="btn btn-primary cap ml-3" href="/weapons/register">register a weapon</a>
            </div>

            <% citizen.forEach(value => { %>
            <li class="list-group-item mt-2">

                <%= value.id %> | <%= value.first_name %> | <%= value.birth %>
                <a href="/citizens/<%= value.id %>-<%= value.first_name %>-<%= value.last_name %>"
                    class="btn btn-success float-right">More Info</a>
            </li>

            <% }) %>
        </ul>
    </div>
</div>