<%- include("../partials/header.ejs") %>

<div class="container mt-3">
    <h1 class="card-title cap text-center text-light">Welcome back <%= username %> </h1>
    <div class="users-list">
        <% if(message != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show margin-right-10 margin-left-10" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>


        <ul class="list-group" id="myUL">
            <a class="btn btn-danger  mt-1" href="/logout">Logout</a>
            <a class="btn btn-primary  mt-1" href="/account/edit">Edit Account</a>
            <a href="/citizen/add" class="btn btn-primary cap  mt-1">add a new citizen</a>
            <a class="btn btn-primary cap mt-1" href="/cars/register">register a car</a>
            <a class="btn btn-primary cap mt-1" href="/weapons/register">register a weapon</a>
            <a href="/citizen/company" class="btn btn-primary cap mt-1">Join or start a business</a>

            <% citizen.forEach(value => { %>
            <li class="list-group-item mt-2 bg-dark text-light">

                <%= value.id %> | <%= value.first_name %> | <%= value.birth %>
                <a href="/citizens/<%= value.id %>-<%= value.first_name %>-<%= value.last_name %>"
                    class="btn btn-success float-right">More Info</a>
            </li>

            <% }) %>
        </ul>
        <div class="mb-4"></div>
    </div>
</div>