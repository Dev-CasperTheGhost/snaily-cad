<%- include("../partials/header.ejs") %>

<div class="container mt-3">
    <form action="" method="POST">
        <% if (message) { %>
        <div class="alert alert-danger">
            <%= message %>    
        </div>
        <% } %>
        <div class="form-group text-light">
            <label for="title">Bleet Title</label>
            <input type="text" class="form-control text-light bg-dark border-dark" name="title" id="title" value="<%= current.title %>">
        </div>
        <div class="form-group text-light">
            <label for="title">Bleet</label>
            <textarea class="form-control text-light bg-dark border-dark" name="description" id="description" rows="20"><%= current.description %></textarea>
        </div>
        <div class="form-group float-right">
            <a href="/bleeter/<%= current.id %>" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-success">Update Bleet</button>
        </div>
    </form>
</div>